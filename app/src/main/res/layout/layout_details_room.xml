<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="8dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_id_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textStyle="bold"
        android:text="Mã số phòng: "
        android:textColor="@color/black"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tv_room_number_detailsROOM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textStyle="bold"
        android:text="Số Phòng: "
        android:textColor="@color/black"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_tenant_detailsROOM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Người thuê:  "
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="14dp" />
    <TextView
        android:id="@+id/tv_roomprice_detailsROOM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Tiền phòng: "
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_waterbillROOM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Số nước sử dụng(Khối): "
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_electricbillROOM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Số điện sử dụng (kWH): "
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="14dp" />
    <TextView
        android:id="@+id/tv_waterbilltotalROOM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Tổng số tiền nước trong tháng: "
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="14dp" />
    <TextView
        android:id="@+id/tv_electricbilltotalROOM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Tổng số tiền điện trong tháng: "
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="14dp" />
    <TextView
        android:id="@+id/tv_servicebillROOM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Tiền dịch vụ 1 tháng: "
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="14dp" />
    <TextView
        android:id="@+id/tv_moneybilltotalROOM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Tổng cộng: "
        android:textStyle="bold"
        android:textColor="#FF0000"
        android:textSize="14dp" />


</LinearLayout>