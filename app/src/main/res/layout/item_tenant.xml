<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="8dp"
    app:cardElevation="10dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_tenant"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/tenant" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_tenant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VÕ VĂN LINH"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="start"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"/>
                <TextView
                    android:id="@+id/tv_identity_tenant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CMND: 187691481"
                    android:textSize="14dp"
                    android:layout_gravity="start"
                    android:textColor="#DD2C00"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_tenant_dob"
                    android:text="16/10/2000"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="8dp"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_edit_tenant"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/update" />

                <ImageView
                    android:id="@+id/img_delete_tenant"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:src="@drawable/delete1" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>