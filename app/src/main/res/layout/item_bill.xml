<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="8dp"
    app:cardElevation="10dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:src="@drawable/phong"
                android:scaleType="centerCrop"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_room_numberIBILL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SỐ PHÒNG"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="start"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"/>
                <TextView
                    android:id="@+id/tv_room_priceIBILL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TIỀN PHÒNG:"
                    android:textSize="14dp"
                    android:layout_gravity="start"
                    android:textColor="#DD2C00"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_details_Bill"
                    android:text="Xem thêm"
                    android:textColor="#F31F1F"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="8dp"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img_updateBILL"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/update"/>
                <ImageView
                    android:id="@+id/img_deleteBILL"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/delete1"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>